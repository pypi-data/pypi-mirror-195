{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://assets.lockss.org/schemas/json/plugin-set-schema.json",
  "title": "Plugin Set",
  "description": "LOCKSS plugin set",
  "type": "object",
  "properties": {
    "kind": {
      "description": "This object's kind",
      "type": "string",
      "const": "PluginSet"
    },
    "id": {
      "description": "An identifier for the plugin set",
      "type": "string"
    },
    "name": {
      "description": "A name for the plugin set",
      "type": "string"
    },
    "builder": {
      "description": "A plugin builder",
      "type": "object",
      "properties": {
        "type": {
          "description": "A plugin builder type",
          "enum": [
            "ant",
            "mvn"
          ]
        }
      },
      "required": [
        "type"
      ],
      "anyOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "ant"
              }
            }
          },
          "then": {
            "properties": {
              "main": {
                "description": "The plugin set's main tree path",
                "type": "string"
              },
              "test": {
                "description": "The plugin set's test tree path",
                "type": "string"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "mvn"
              }
            }
          },
          "then": {
            "properties": {
              "main": {
                "description": "The plugin set's main tree path",
                "type": "string"
              },
              "test": {
                "description": "The plugin set's test tree path",
                "type": "string"
              }
            }
          }
        }
      ]
    }
  },
  "required": [
    "kind",
    "id",
    "name",
    "builder"
  ]
}
